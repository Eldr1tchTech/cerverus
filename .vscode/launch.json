{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/server/server",
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/bin"
                }
            ],
            "externalConsole": false,
            "stopAtEntry": false
        },
        {
            "name": "Launch Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/client/client",
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/bin"
                }
            ],
            "externalConsole": false,
            "stopAtEntry": false
        }
    ]
}